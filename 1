const filtrlink = document.querySelector('.filtr__link')
const searchButton = document.querySelectorAll('.select__button')

let counterLink = 0;

if (filtrlink.style.display = "none") {
for (let i = 0; i < searchButton.length; i++) { searchButton[i].addEventListener('click', ()=> {
	if (counterLink == 0) {
	filtrlink.style.display = "inline"
	counterLink++;
	}
	})
	}
	}

